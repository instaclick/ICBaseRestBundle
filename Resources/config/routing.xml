<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ICBaseRestBundle_Rest_Filter" path="/{packageName}/{subPackageName}/{entityName}" methods="GET">
        <default key="_controller">ICBaseRestBundle:Rest:filter</default>
        <option key="expose">true</option>
    </route>

    <route id="ICBaseRestBundle_Rest_Post" path="/{packageName}/{subPackageName}/{entityName}" methods="POST">
        <default key="_controller">ICBaseRestBundle:Rest:post</default>
        <option key="expose">true</option>
    </route>

    <route id="ICBaseRestBundle_Rest_Get" path="/{packageName}/{subPackageName}/{entityName}/{id}" methods="GET">
        <default key="_controller">ICBaseRestBundle:Rest:get</default>
        <option key="expose">true</option>
    </route>

    <route id="ICBaseRestBundle_Rest_Put" path="/{packageName}/{subPackageName}/{entityName}/{id}" methods="PUT">
        <default key="_controller">ICBaseRestBundle:Rest:put</default>
        <option key="expose">true</option>
    </route>

    <route id="ICBaseRestBundle_Rest_Delete" path="/{packageName}/{subPackageName}/{entityName}/{id}" methods="DELETE">
        <default key="_controller">ICBaseRestBundle:Rest:delete</default>
        <option key="expose">true</option>
    </route>

</routes>
